generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING") 
}

model Leaderboard {
  id          String      @default(cuid()) @id
  user        User        @relation(fields: [userId], references: [id])
  userId      String
  challenge   Challenge   @relation(fields: [challengeId], references: [id])
  challengeId String
  score       Int
  createdAt   DateTime    @default(now())
}

model User {
  id          String        @default(cuid()) @id
  name        String
  email       String
  createdAt   DateTime      @default(now()) @map(name: "created_at")
  challenges  Challenge[]
  leaderboards Leaderboard[] // Add the backrelation
}

model Challenge {
  id           String         @default(cuid()) @id
  title        String
  xLoc1        Int
  yLoc1        Int
  imageUrl1    String
  xLoc2        Int
  yLoc2        Int
  imageUrl2    String
  xLoc3        Int
  yLoc3        Int
  imageUrl3    String
  author       User?          @relation(fields: [authorId], references: [id])
  authorId     String?
  leaderboards Leaderboard[]  // Back-relation to Leaderboard
}
